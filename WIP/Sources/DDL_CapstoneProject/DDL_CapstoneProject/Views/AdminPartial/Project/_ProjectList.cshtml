<!-- begin ADVANCED TABLES ROW -->
<div class="row">

    <div class="col-lg-12">

        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>Danh sách dự án</h4>
                </div>
                <div class="portlet-widgets">
                    <a onclick="return false" href="" class="btn btn-blue btn-sm">Export</a>
                    <a onclick="return false" data-toggle="collapse" data-parent="#accordion" href="#NewProjectTable"><i class="fa fa-chevron-down"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="NewProjectTable">
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green"
                               datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên</th>
                                    <th>Lĩnh vực</th>
                                    <th>Người tạo</th>
                                    <th>Mục tiêu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Lượt ủng hộ</th>
                                    <th>Tiền được ủng hộ</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd" ng-repeat="project in ProjectList">
                                    <td>{{project.ProjectCode}}</td>
                                    <td>{{project.Title}}</td>
                                    <td>{{project.Category}}</td>
                                    <td class="center">{{project.CreatorEmail}}</td>
                                    <td class="center">{{project.FundingGoal}}</td>
                                    <td class="center">{{project.ExpireDate}}</td>
                                    <td class="center">{{project.TotalBacking | currency:"":0}}</td>
                                    <td class="center">{{project.PledgeAmount | currency:"":0}}</td>
                                    <td class="center">
                                        <span class="label label-success center-block" style="padding: 9px">{{project.Status}}</span>
                                    </td>
                                    <td class="center">
                                        <a href="@Url.Content("/admin/#/project/{{project.ProjectCode}}")">
                                            <button class="btn btn-primary btn-sm" type="button" id="dropdownMenu1">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
        </div>
        <!-- /.portlet -->

    </div>
    <!-- /.col-lg-12 -->

</div>