<!-- begin ADVANCED TABLES ROW -->
<div class="row">

    <div class="col-lg-12">

        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>Danh sách dự án</h4>
                </div>
                <div class="portlet-widgets">
                    <a onclick="return false" href="" class="btn btn-blue btn-sm">Xuất dữ liệu</a>
                    <a onclick="return false" data-toggle="collapse" data-parent="#accordion" href="#NewProjectTable"><i class="fa fa-chevron-down"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="NewProjectTable" class="panel-collapse collapse in">
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green"
                               datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">Mã</th>
                                    <th>Tên</th>
                                    <th>Lĩnh vực</th>
                                    <th>Người tạo</th>
                                    <th>Mục tiêu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Lượt ủng hộ</th>
                                    <th>Tiền được ủng hộ</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 34px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd" ng-repeat="project in ProjectList">
                                    <td class="col-text" style="width: 50px;">{{project.ProjectCode}}</td>
                                    <td class="col-text">{{project.Title}}</td>
                                    <td class="col-text">{{project.Category}}</td>
                                    <td class="center col-text">{{project.CreatorEmail}}</td>
                                    <td class="center col-number col-datetime">{{project.FundingGoal | currency:"":0}}</td>
                                    <td class="center col-number col-datetime">{{project.ExpireDate | date:"dd/MM/yyyy"}}</td>
                                    <td class="center col-number col-datetime">{{project.TotalBacking | currency:"":0}}</td>
                                    <td class="center col-number col-datetime">{{project.CurrentFunded | currency:"":0}}</td>
                                    <td class="center">
                                        <span class="label label-primary center-block blue" ng-if="project.Status == 'approved'" style="padding: 9px">Đang chạy</span>
                                        <span class="label label-primary center-block gray" ng-if="project.Status == 'rejected'" style="padding: 9px">Từ chối</span>
                                        <span class="label label-primary center-block default" ng-if="project.Status == 'expired'" style="padding: 9px">Hết hạn</span>
                                        <span class="label label-primary center-block purple" ng-if="project.Status == 'pending'" style="padding: 9px">Chờ duyệt</span>
                                        <span class="label label-primary center-block red" ng-if="project.Status == 'suspended'" style="padding: 9px">Đình chỉ</span>
                                    </td>
                                    <td class="center" style="width: 34px;">
                                        <a href="@Url.Content("/admin/#/project/{{project.ProjectCode}}")">
                                            <button class="btn btn-primary btn-sm" type="button" id="dropdownMenu1" tooltip="Xem chi tiết" tooltip-append-to-body="true" tooltip-placement="left">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
        </div>
        <!-- /.portlet -->

    </div>
    <!-- /.col-lg-12 -->

</div>