<div id="items-projects">
    <section id="portfolio" class="container">
        <h4>Backed projects:</h4>

        <ul class="portfolio-items col-4" ng-repeat="project in ListBackedProject">
            <li class="portfolio-item apps">
                <div class="item-inner">
                    <div class="item-image column">
                        <figure><img src="\images\projects\{{project.ImageUrl}}" alt=""></figure>
                    </div>
                    <div class="item-title">
                        <h5><a href="/#/project/detail/{{project.ProjectCode}}">{{project.Title}}</a></h5>
                    </div>
                    <div class="item-expand">
                        <div class="item-content">
                            <p class="fnt15">{{project.SubDescription}}</p>
                        </div>
                        <div class="item-footer">
                            <div class="mt10 mb5">
                                <a class="grey-dark" href=""><span class="glyphicon glyphicon-map-marker" aria-hidden="true">&nbsp;</span>{{project.Location}}</a>
                                &nbsp;&nbsp;
                                <a class="grey-dark" href=""><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span>{{project.Category}}</a>
                                &nbsp;&nbsp;
                            </div>
                            <div class="progress mt5 mb5">
                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="50" aria-valuemax="100" style="width: 50%">
                                    <span class="sr-only">{{project.CurrentFunded}}% Complete (success)</span>
                                </div>
                            </div>
                            <ul class="list-inline">
                                <li><p class="fnt-b mt0 mb0 c00">{{project.CurrentFunded}}%</p><p class="mt0 mb0">đã được tài trợ</p></li>
                                <li><p class="fnt-b mt0 mb0 c00">{{project.CurrentFundedNumber | currency}}</p><p class="mt0 mb0">đã được gây quỹ</p></li>
                                <li><p class="fnt-b mt0 mb0 c00">{{project.ExpireDate}}</p><p class="mt0 mb0">ngày còn lại</p></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </li><!--/.portfolio-item-->
        </ul>
    </section><!--/#portfolio-->
    <div class="form-actions txt-c">
        <a class="btn btn-transparent btn-sm" href="../#/project/backedProject">Xem thêm</a>
    </div>
</div>

