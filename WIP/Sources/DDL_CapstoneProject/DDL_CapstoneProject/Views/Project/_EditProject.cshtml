@{
    ViewBag.Title = "Edit Project";
}

<div id="process-Create">
    <div class="container">
        <h5>Chỉnh sửa</h5>
        <div class="progress">
            <div class="progress-bar" style="width: 40%;"></div>
            <div class="progress-bar progress-bar-warning" style="width: 20%;"></div>
            <div class="progress-bar progress-bar-danger" style="width: 30%;"></div>
            <div class="progress-bar progress-bar-success" style="width: 10%;"></div>
        </div>
    </div>
</div> <!-- end PROCESS-CREATE -->
<div id="create-tabs-fixedPosition"></div>
<!--Wanrning -->
<div class="alert alert-danger" role="alert" style="text-align: center" ng-if="Project.Status == 'rejected'">Dự án của bạn bị từ chối, xin hãy xem và chỉnh sửa lại trước khi gửi lần tiếp theo. Nếu bạn cần giúp đỡ hãy liên hệ với chúng tôi qua email: dandelion.system@gmail.com hay SĐT: (+84)123 810 7765</div>
<div class="alert alert-warning" role="alert" style="text-align: center" ng-if="Project.Status == 'pending'">Dự án của bạn đang trong thời gian kiểm duyệt(2-3 ngày từ ngày gửi) vui lòng chờ kết quả từ chúng tôi!</div>
<div class="alert alert-danger" role="alert" style="text-align: center" ng-show="errorListFlag == true">
    <p ng-repeat="error in errorList">{{error}}</p>
</div>
<div id="create-tabs">
    <div class="container">
        <div class="tab-center" id="tablist">
            <ul class="nav nav-tabs">
                <li class="active"><a onclick="return false" href="#basic" data-toggle="tab">Thông tin cơ bản</a></li>
                <li><a onclick="return false" href="#reward" data-toggle="tab" ng-click="getReward()">Mức ủng hộ</a></li>
                <li><a onclick="return false" href="#story" data-toggle="tab" ng-click="getStory()">Mô tả chỉ tiết</a></li>
                <li ng-show="Project.Status == 'approved'"><a onclick="return false" href="#update" data-toggle="tab" ng-click="getUpdateLog()">Cập nhật</a></li>
                <li ng-show="Project.Status == 'approved'"><a onclick="return false" href="#quesion-answer" data-toggle="tab" ng-click="getQuestion()">Hỏi đáp</a></li>
                @*<li><a onclick="return false" href="#timelineTab" data-toggle="tab" ng-click="getTimeline()">Lịch trình</a></li>*@
                <a class="btn btn-success" ng-click="preview()">Xem trước</a>
                <a class="btn btn-primary" ng-click="submit()" ng-if="Project.Status == 'draft' || Project.Status == 'rejected'">Gửi dự án</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'pending'">Chờ kiểm duyệt</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'approved'">Đã xác nhận</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'suspended'">Đình chỉ</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'expired'">Hết hạn</a>
            </ul>
        </div>
    </div>
</div> <!-- end CREATE-TABS -->


<div id="tabs-panel">
    <div class="container">
        <div class="tab-content">

            <!-- begin tab basic-->
            <div id="basic" role="tabpanel" class="tab-pane fade in active  border-main">
                <div for="title">
                    <h4 class="text-center">Chỉnh sửa chi tiết dự án!</h4>
                    <h5 class="text-center">Thêm hình ảnh, mục tiêu và nhiều thứ quan trọng khác.</h5>
                </div> <!-- end-TITLE -->
                <div for="content" class="container-fluid">
                    <form name="BasicForm" id="basic-form" ng-model="BasicForm" novalidate>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Ảnh dự án</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <img ng-src="{{Project.ImageUrl}}" alt="" class="img-responsive center-block projecImg-preview">
                                        </div>
                                        <div for="image">
                                            <div class="asset_upload">
                                                <div class="upload">
                                                    <input type="file" class="avatar file" name="UploadImage" id="imgSelected" ng-file-dirty
                                                           ng-file-select="onFileSelect($files)" accept="image/*" ng-disabled="AllEditable == false || PrjApprove == true">
                                                    <strong class="center profile-photo">
                                                        Lựa chọn một hình ảnh từ máy tính của bạn
                                                        <span> JPEG, PNG, GIF, or BMP  •  50MB dung lượng</span>
                                                    </strong>
                                                </div>
                                            </div>
                                            <div ng-show="fileIsBig == true" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span>Dung lượng ảnh phải nhỏ hơn 50MB</span>
                                            </div>
                                        </div>
                                        <div class="text-danger" ng-show="Project.ImageUrl == '' && errorListFlag == true">
                                            <span class="glyphicon glyphicon-remove text-danger"></span>
                                            <span>Dự án bắt buộc phải có ảnh</span>
                                        </div>
                                    </div>
                                </div> <!-- end project image -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Tên dự án</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <input type="text" id="project_name" class="form-control fnt18 fnt-b" style="padding-right: 48px;"
                                                   name="ProjectTitle" ng-trim="true" maxlength="60"
                                                   ng-disabled="AllEditable == false || PrjApprove == true" ng-model="Project.Title">
                                            <label for="" class="countText">{{Project.Title.length + "/60"}}</label>
                                        </div>
                                        <div class="field-help-2" ng-class="{'text-danger' : (Project.Title.length > 60 || Project.Title.length < 10) && errorListFlag == true}">
                                            <span class="glyphicon glyphicon-remove text-danger" ng-show="(Project.Title.length > 60 || Project.Title.length < 10) && errorListFlag == true"></span>
                                            <span>Tên dự án ít nhất 10 kí tự và dài nhất 60 kí tự!</span>
                                            <p>Tên dự án nên ngắn gọn và dễ nhớ!</p>
                                        </div>
                                    </div>
                                </div> <!-- end project title -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Mô tả ngắn</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="field-wrapper">
                                            <textarea class="form-control fnt18"
                                                      rows="3" style="resize: none" name="SubDes" ng-trim="true"
                                                      maxlength="300"
                                                      ng-model="Project.SubDescription"
                                                      ng-disabled="AllEditable == false"
                                                      msd-elastic="\n"></textarea>
                                            @*ng-model-options="{ updateOn: 'change blur'}"*@
                                            <div style="position: relative">
                                                <label for="" class="countText" style="top: -30px; right: 5px">{{Project.SubDescription.length + "/300"}}</label>
                                            </div>
                                            @*<div ng-show="BasicForm.SubDes.$dirty && BasicForm.SubDes.$invalid" class="text-danger">
                                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                                    <span ng-show="BasicForm.SubDes.$error.minlength">Tên dự án tối thiểu 30 kí tự!</span>
                                                    <span ng-show="BasicForm.SubDes.$error.maxlength">Tên dự án tối đa 135 kí tự!</span>
                                                </div>*@
                                        </div>
                                        <div class="field-help-2" ng-class="{'text-danger' : (Project.SubDescription.length > 300 || Project.SubDescription.length < 30) && (errorListFlag == true || PrjApprove == true)}">
                                            <span class="glyphicon glyphicon-remove text-danger"
                                                  ng-show="(Project.SubDescription.length > 300 || Project.SubDescription.length < 30) && (errorListFlag == true || PrjApprove == true)"></span>
                                            <span>
                                                Mô tả ngắn ít nhất là 30 kí tự và dài nhất là 300 kí tự!
                                            </span>
                                        </div>
                                    </div>
                                </div> <!-- end short blurb -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Lĩnh vực</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="field-wrapper">
                                            <select class="form-control fnt-b" ng-model="selectedOption" id="sel1"
                                                    ng-options="category.Name for category in Categories track by category.CategoryID " ng-disabled="AllEditable == false || PrjApprove == true"></select>
                                        </div>
                                    </div>
                                </div> <!-- end category -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Địa điểm</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <input type="text"
                                                   class="form-control fnt18 fnt-b"
                                                   name="ProjectLocation"
                                                   maxlength="60" ng-trim="true"
                                                   ng-model="Project.Location" ng-autocomplete ng-disabled="AllEditable == false || PrjApprove == true">
                                            <label for="" class="countText">{{Project.Location.length + "/60"}}</label>
                                            @*<div ng-show="BasicForm.ProjectLocation.$dirty && BasicForm.ProjectLocation.$invalid" class="text-danger">
                                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                                    <span ng-show="BasicForm.ProjectLocation.$error.maxlength">Tên dự án tối đa 60 kí tự!</span>
                                                </div>*@
                                        </div>
                                        <div class="field-help-2" ng-class="{'text-danger' : (Project.Location.length > 60 || Project.Location.length < 10) && errorListFlag == true}">
                                            <span class="glyphicon glyphicon-remove text-danger" ng-show="(Project.Location.length > 60 || Project.Location.length < 10) && errorListFlag == true"></span>
                                            <span>
                                                Địa điểm ít nhất 10 kí tự và dài nhất 60 kí tự!
                                            </span>
                                        </div>
                                    </div>
                                </div> <!-- end location -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Thời hạn</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        @*<div class="form-inline">
                                                <label for="startdate" class="fnt20">Start:</label>
                                                <input type='date' class="form-control" style="line-height: 15px" />
                                            </div>*@
                                        <div class="form-inline">
                                            <label for="enddate" class="fnt20">End:</label>
                                            <input type='date' ng-model="Project.ExpireDate" name="ProjectDeadLine" id="ProjectDeadLine"
                                                   class="form-control" style="line-height: 15px" ng-disabled="AllEditable == false || PrjApprove == true" />
                                            <div ng-show="BasicForm.ProjectDeadLine.$dirty && BasicForm.ProjectDeadLine.$invalid" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span ng-show="BasicForm.ProjectDeadLine.$invalid">Xin hãy nhập đúng chuẩn ngày tháng!</span>
                                            </div>
                                            <div class="field-help-2" ng-class="{'text-danger' : originalExpireDate < endDate && errorListFlag == true}">
                                                <span class="glyphicon glyphicon-remove text-danger" ng-show="originalExpireDate < endDate && errorListFlag == true"></span>
                                                <span>
                                                    Ngày hết hạn dự án phải xét ít nhất sau 10 ngày từ ngày gửi duyệt dự án
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end funding duration -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <span class="title">Mục tiêu gây quỹ</span><span class="text-danger"> *</span>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" format="number" class="form-control fnt-b" ng-trim="true"
                                               name="FundingGoal" ng-model="Project.FundingGoal" ng-disabled="AllEditable == false || PrjApprove == true">
                                        @*<div ng-show="BasicForm.FundingGoal.$dirty && Project.FundingGoal < 1000000" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span>Mục tiêu gây quỹ phải là chữ số và lớn hơn 1,000,000!</span>
                                            </div>*@
                                        <div for="tips" ng-class="{'text-danger' : Project.FundingGoal < 1000000 && errorListFlag == true}">
                                            <span class="glyphicon glyphicon-remove text-danger" ng-show="Project.FundingGoal < 1000000 && errorListFlag == true"></span>
                                            <span>Mục tiêu gây quỹ ít nhất là 1,000,000&#8363;</span>
                                            <p>
                                                Tùy theo rank dự án mà chúng tôi sẽ lấy từ 2-5% số tiền gấy quỹ được.
                                            </p>
                                        </div>
                                    </div>
                                </div> <!-- end funding goals -->
                                <div ng-if="BasicForm.$dirty">
                                    <button type="button" class="btn btn-danger" ng-click="resetProjectBasic(BasicForm)">Khôi phục</button>
                                    <button type="button" ng-disabled="BasicForm.$invalid || fileIsBig == true || (PrjApprove == true && (Project.SubDescription.length > 135 || Project.SubDescription.length < 30))" class="btn btn-success" ng-click="editProjectBasic(BasicForm)">Lưu</button>
                                </div>
                            </div>
                            <!-- end BASIC CONTENT -->

                            <div class="col-md-3">
                                <div for="item" class="pt20">
                                    <li class="portfolio-item" style="list-style: none">
                                        <div class="item-inner  ml0 mr0">
                                            <div class="item-image hover01 column">
                                                <figure><img ng-src="{{Project.ImageUrl}}" class="img-fit" alt=""></figure>
                                            </div> <!-- end item-image -->
                                            <div class="item-title">
                                                <h5><a href="">{{Project.Title}}</a></h5>
                                            </div> <!-- end item-title -->
                                            <div class="item-content" style="word-break: break-word;">
                                                <p class="fnt15">{{Project.SubDescription}}</p>
                                            </div> <!-- end item-content -->
                                            <div class="item-footer">
                                                <div class="mt10 mb5">
                                                    <a class="grey-dark" href=""><span class="glyphicon glyphicon-map-marker" aria-hidden="true">&nbsp;</span>{{Project.Location}}</a>
                                                    &nbsp;&nbsp;
                                                    <a class="grey-dark" href=""><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span>{{selectedOption.Name}}</a>
                                                    &nbsp;&nbsp;
                                                </div>
                                                <div class="progress mt5 mb5">
                                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{ Project.CurrentFunded*100/Project.FundingGoal}}" aria-valuemax="100" style="width: {{Project.CurrentFunded*100/Project.FundingGoal}}%">
                                                        <span class="sr-only">{{ Project.CurrentFunded*100/Project.FundingGoal | number:0}}% Complete (success)</span>
                                                    </div>
                                                </div>
                                                <ul class="list-inline">
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">{{ Project.CurrentFunded*100/Project.FundingGoal | number:0}}%</p>
                                                        <p class="fnt16 mt0 mb0">trên tổng số</p>
                                                    </li>
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">{{Project.CurrentFunded | currency:"":0}}</p>
                                                        <p class="fnt16 mt0 mb0">đã được gây quỹ</p>
                                                    </li>
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">{{Project.NumberDays}}</p>
                                                        <p class="fnt16 mt0 mb0">ngày còn lại</p>
                                                    </li>
                                                </ul>
                                                <div>
                                                    <span class="label label-primary" ng-bind="Project.ProjectCode"></span>
                                                </div>
                                            </div> <!-- end item-footer -->
                                        </div>
                                    </li><!--/.portfolio-item-->
                                </div>
                            </div> <!-- end BASIC VIEW -->
                        </div>
                    </form>
                </div> <!-- end-CONTENT -->
            </div>
            <!-- end-BASIC -->
            @* Begin tab reward *@
            <div id="reward" role="tabpanel" class="tab-pane fade in border-main">
                <div for="title" class="pt30">
                    <h4 class="text-center">Bạn nên cảm ơn những người đã ủng hộ bạn như thế nào?</h4>
                    <h5 class="text-center">Đưa ra những gói quà tặng, ưu đãi,... thì sao?</h5>
                </div> <!-- end-TITLE -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form name="rewardForm" ng-model="rewardForm" novalidate>
                                <div ng-repeat="rewardPkg in RewardPKgs">
                                    <div class="row border-grey">
                                        <div class="col-md-2">
                                            <p class="title">Gói #{{$index + 1}}</p>
                                        </div>
                                        <div class="col-md-10">
                                            <div style="background: #FFF; border: 1px solid eee; padding: 10px; border-radius: 6px">
                                                <p class="fnt-b mt0 mb0">Ủng hộ {{rewardPkg.PledgeAmount | currency:"":0}}&#8363; hoặc hơn</p>
                                                <span class="text-danger" ng-show="rewardPkg.PledgeAmount < 10000 && errorListFlag == true">Mức ủng hộ ít nhất là 10,000&#8363;</span>
                                                <p class="mt0 mb0">{{rewardPkg.CurrentQuantity | currency:"":0}} Đã ủng hộ <span ng-if="rewardPkg.Type == 'limited'">| Giới hạn: {{rewardPkg.Quantity | currency:"":0}}</span><span ng-if="rewardPkg.Type == 'unlimited'">| Không giới hạn</span></p>
                                                <span class="text-danger" ng-show="rewardPkg.Type == 'limited' && errorListFlag == true && rewardPkg.Quantity < 1">Số lượng phải lớn hơn 0</span>
                                                <hr />
                                                <p class="mt0 mb0 div-textarea">{{rewardPkg.Description}}</p>
                                                <hr />
                                                <span class="text-danger" ng-show="(rewardPkg.Description.length < 10 || rewardPkg.Description.length > 135) && errorListFlag == true">Mô tả mức ủng hộ cần ít nhất 10 kí tự và dài nhất 135 kí tự</span>
                                                <p class="mt0 mb0 pb0 pt0" ng-show="rewardPkg.Type != 'no reward'">Thời gian giao hàng: {{rewardPkg.EstimatedDelivery | date:'MM-yyyy'}}</p>
                                                <span class="text-danger" ng-show="rewardPkg.Type != 'no reward' && rewardPkg.EstimatedDelivery < Project.ExpireDate && errorListFlag == true">Ngày giao hàng cần đặt sau ngày dự án kết thúc</span>
                                                <p class="mt0 mb0 pb0 pt0">
                                                    Kiểu:
                                                    <span ng-if="rewardPkg.Type == 'no reward'">Không phần thưởng</span>
                                                    <span ng-if="rewardPkg.Type == 'limited'">Giới hạn</span>
                                                    <span ng-if="rewardPkg.Type == 'unlimited'">Không giới hạn</span>
                                                </p>
                                                <p class="mt0 mb0" ng-show="rewardPkg.IsHide == true"><span class="label label-warning">Đã ẩn</span></p>
                                            </div>
                                            <ul class="list-inline pull-right mt0 mb0 pb0" style="padding-top: 10px">
                                                <li><button class="btn btn-default btn-sm" ng-disabled="AllEditable == false || (RewardPKgs.length == 1 && PrjApprove == true)" ng-click="updateReward($index)">Ẩn</button></li>
                                                <li>
                                                    <button class="btn btn-danger btn-sm" ng-click="deleteReward($index)"
                                                            ng-disabled="AllEditable == false || rewardPkg.CurrentQuantity != 0 || (RewardPKgs.length == 1 && PrjApprove == true)">
                                                        Xóa
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="btn btn-info btn-sm" data-toggle="modal" ng-click="editRewardModal($index)"
                                                            ng-disabled="AllEditable == false || rewardPkg.CurrentQuantity != 0">
                                                        Sửa
                                                    </button>
                                                </li>
                                            </ul>
                                        </div> <!-- end items -->
                                    </div> <!-- end items -->
                                </div>
                                <div ng-if="rewardForm.$dirty">
                                    <button type="button" class="btn btn-danger" ng-click="resetReward(rewardForm)">Khôi phục</button>
                                    <button type="button" ng-disabled="rewardForm.$invalid" class="btn btn-success" ng-click="updateReward(rewardForm)">Lưu</button>
                                </div>
                            </form>
                            <!-- add new reward dialog -->
                            <div class="modal fade" id="editRewardModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <form class="form-horizontal" role="form" name="EditRewardModal" novalidate>
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="row border-grey">
                                                <div class="col-md-2">
                                                    <p class="title">Gói #{{editPkg.Index}}</p>
                                                </div>
                                                <div class="col-md-10">
                                                    <div class="row pb5">
                                                        <div class="col-md-4"><span>Mức ủng hộ</span><span class="text-danger"> *</span></div>
                                                        <div class="col-md-8">
                                                            <input type="text" format="number" id="pledge_amount" name="PledgeAmount" ng-model="editPkg.PledgeAmount" class="form-control">
                                                            @*<div ng-show="EditRewardModal.PledgeAmount.$dirty && editPkg.PledgeAmount < 1000" class="text-danger">
                                                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                                                    <span>Phải là chữ số và lớn hơn 1,000!</span>
                                                                </div>*@
                                                            <div class="field-help-2" ng-class="{'text-danger' : editPkg.PledgeAmount < 10000 && (errorListFlag == true || PrjApprove == true)}">
                                                                <span class="glyphicon glyphicon-remove text-danger"
                                                                      ng-show="editPkg.PledgeAmount < 10000 && (errorListFlag == true || PrjApprove == true)"></span>
                                                                <span>
                                                                    Mức ủng hộ ít nhất là 10,000&#8363;.
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div> <!-- end Pledge amount -->
                                                    <div class="row pb5">
                                                        <div class="col-md-4"><span>Mô tả</span><span class="text-danger"> *</span></div>
                                                        <div class="col-md-8">
                                                            <textarea class="form-control" rows="5" style="resize: none" name="NewRewardDes"
                                                                      maxlength="135" ng-trim="true" ng-model="editPkg.Description"></textarea>
                                                            @*<div ng-show="EditRewardModal.NewRewardDes.$dirty && EditRewardModal.NewRewardDes.$invalid" class="text-danger">
                                                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                                                    <span ng-show="EditRewardModal.NewRewardDes.$error.minlength">Mô tả tối thiểu 10 kí tự!</span>
                                                                    <span ng-show="EditRewardModal.NewRewardDes.$error.maxlength">Mô tả tối đa 135 kí tự!</span>
                                                                </div>*@
                                                            <div class="field-help-2" ng-class="{'text-danger' : (editPkg.Description.length < 10 || editPkg.Description.length > 135) && (errorListFlag == true || PrjApprove == true)}">
                                                                <span class="glyphicon glyphicon-remove text-danger"
