<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Content("/#/")" class="navbar-brand"> DIO Project </a>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Content("/#")" class="navbar-brand"> Create </a></li>
                    @{
                        if (User.Identity == null || !User.Identity.IsAuthenticated)
                        {
                            <li><a href="@Url.Content("/#/register")" class="navbar-brand"> Register </a></li>
                            <li><a href="@Url.Content("/#/login")" class="navbar-brand"> Login </a></li>
                        }
                    }
                </ul>
                @{

                    if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="pull-right"><li><a href="@Url.Content("/Account/Logout")" class="navbar-brand"> Logout </a></li></ul>
                        <ul class="pull-right"><li><a href="@Url.Content("/#/EditProfile")" class="navbar-brand"> Hello, @User.Identity.Name </a></li></ul>                      
                    }
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
