    //Toogle slideBar
    $('.toggle-link').click(function () {
        $('.toggle').toggle(300);
        $('#colPush').toggleClass("col-md-3 col-md-2", 300);
        $('#colMain').toggleClass("col-md-8 col-md-9", 300);
        $('.arrow_toogle').toggleClass("fa-arrow-circle-left fa-arrow-circle-right", 300);
    });
</script>

