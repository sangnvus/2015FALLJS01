@{
    ViewBag.Title = "Edit Project";
}

<div id="process-Create">
    <div class="container">
        <h5>Chỉnh sửa</h5>
        <div class="progress">
            <div class="progress-bar" style="width: 40%;"></div>
            <div class="progress-bar progress-bar-warning" style="width: 20%;"></div>
            <div class="progress-bar progress-bar-danger" style="width: 30%;"></div>
            <div class="progress-bar progress-bar-success" style="width: 10%;"></div>
        </div>
    </div>
</div> <!-- end PROCESS-CREATE -->
@* Wanrning *@
<div class="alert alert-warning" role="alert" style="text-align: center" ng-if="Project.Status == 'rejected'">Dự án của bạn bị từ chối, xin hãy xem và chỉnh sửa lại trước khi submit lần tiếp theo. Nếu bạn cần giúp đỡ hãy liên hệ với chúng tôi qua email... hay SĐT...</div>
<div class="alert alert-warning" role="alert" style="text-align: center" ng-if="Project.Status == 'pending'">Dự án của bạn đang trong thời gian kiểm duyệt(2-3 ngày từ ngày submit) vui lòng chờ kết quả từ chúng tôi!</div>
<div class="alert alert-warning" role="alert" style="text-align: center" ng-if="errorListFlag == true">
    <p ng-repeat="error in errorList">{{error}}</p>
</div>
<div id="create-tabs">
    <div class="container">
        <div class="tab-center" id="tablist">
            <ul class="nav nav-tabs">
                <li class="active"><a onclick="return false" href="#basic" data-toggle="tab">Thông tin</a></li>
                <li><a onclick="return false" href="#reward" data-toggle="tab" ng-click="getReward()">Gói quà</a></li>
                <li><a onclick="return false" href="#story" data-toggle="tab" ng-click="getStory()">Câu chuyện</a></li>
                <li ng-if="Project.Status == 'approved'"><a onclick="return false" href="#update" data-toggle="tab" ng-click="getUpdateLog()">Cập nhật</a></li>
                <li ng-if="Project.Status == 'approved'"><a onclick="return false" href="#quesion-answer" data-toggle="tab" ng-click="getQuestion()">Hỏi đáp</a></li>
                <li><a onclick="return false" href="#timelineTab" data-toggle="tab" ng-click="getTimeline()">Timeline</a></li>
                @*<li><a onclick="return false" href="#preview" data-toggle="tab">Xem trước</a></li>*@
                <a class="btn btn-primary" ng-click="submit()" ng-if="Project.Status == 'draft' || Project.Status == 'rejected'">submit for review</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'pending'">Chờ kiểm duyệt</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'approved'">Approved</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'suspended'">Suspend</a>
                <a class="btn btn-primary" ng-if="Project.Status == 'expired'">Expired</a>
            </ul>
        </div>
    </div>
</div> <!-- end CREATE-TABS -->


<div id="tabs-panel">
    <div class="container">
        <div class="tab-content">

            <!-- begin tab basic-->
            <div id="basic" role="tabpanel" class="tab-pane fade in active  border-main">
                <div for="title">
                    <h4 class="text-center">Start building your project!</h4>
                    <h5 class="text-center">Add an image, a goal, and other important details.</h5>
                </div> <!-- end-TITLE -->
                <div for="content" class="container-fluid">
                    <form name="BasicForm" id="basic-form" ng-model="BasicForm" novalidate>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Ảnh dự án</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <img ng-src="{{Project.ImageUrl}}" alt="" class="img-responsive center-block projecImg-preview">
                                        </div>
                                        <div for="image">
                                            <div class="asset_upload">
                                                <div class="upload">
                                                    <input type="file" class="avatar file" name="UploadImage" id="imgSelected" ng-file-dirty
                                                           ng-file-select="onFileSelect($files)" accept="image/*" ng-disabled="AllEditable == false">
                                                    <strong class="center profile-photo">
                                                        Lựa chọn một hình ảnh từ máy tính của bạn
                                                        <span> JPEG, PNG, GIF, or BMP  •  50MB file limit</span>
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end project image -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Tên dự án</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <input type="text" id="project_name" class="form-control fnt18 fnt-b" name="ProjectTitle" maxlength="60" ng-maxlength="60" ng-trim="true" ng-minlength="10"
                                                   ng-disabled="AllEditable == false" ng-model="Project.Title">
                                            <label for="" class="countText">{{Project.Title.length + "/60"}}</label>
                                            <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="BasicForm.ProjectTitle.$dirty && BasicForm.ProjectTitle.$valid"></span>
                                            <div ng-show="BasicForm.ProjectTitle.$dirty && BasicForm.ProjectTitle.$invalid" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span ng-show="BasicForm.ProjectTitle.$error.minlength">Tên dự án tối thiểu 10 kí tự!</span>
                                                <span ng-show="BasicForm.ProjectTitle.$error.maxlength">Tên dự án tối đa 60 kí tự!</span>
                                            </div>
                                        </div>
                                        <div class="field-help-2">
                                            <p>Your project title and blurb should be simple, specific, and memorable. Our search tools run through these sections of your project, so be sure to incorporate any key words here!</p>
                                            <p>These words will help people find your project, so choose them wisely! Your name will be searchable too.</p>
                                        </div>
                                    </div>
                                </div> <!-- end project title -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Short blurb</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="field-wrapper">
                                            <textarea class="form-control fnt18" rows="3" style="resize: none" name="SubDes" ng-trim="true" ng-minlength="30"
                                                      rows="3" maxlength="135" ng-maxlength="135" ng-model="Project.SubDescription" ng-disabled="AllEditable == false"></textarea>
                                            <label for="" class="countText" style="top: 70px">{{Project.SubDescription.length + "/135"}}</label>
                                            <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="BasicForm.SubDes.$dirty && BasicForm.SubDes.$valid"></span>
                                            <div ng-show="BasicForm.SubDes.$dirty && BasicForm.SubDes.$invalid" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span ng-show="BasicForm.SubDes.$error.minlength">Tên dự án tối thiểu 30 kí tự!</span>
                                                <span ng-show="BasicForm.SubDes.$error.maxlength">Tên dự án tối đa 135 kí tự!</span>
                                            </div>
                                        </div>
                                        <div class="field-help-2">
                                            <p>If you had to describe what you're creating in one tweet, how would you do it?</p>
                                        </div>
                                    </div>
                                </div> <!-- end short blurb -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Lĩnh vực</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="field-wrapper">
                                            <select class="form-control fnt-b" ng-model="selectedOption" id="sel1"
                                                    ng-options="category.Name for category in Categories track by category.CategoryID " ng-disabled="AllEditable == false"></select>
                                        </div>
                                    </div>
                                </div> <!-- end category -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Địa điểm</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="">
                                            <input type="text" class="form-control fnt18 fnt-b" name="ProjectLocation" ng-minlength="10" ng-maxlength="60" maxlength="60" ng-trim="true"
                                                   ng-model="Project.Location" ng-autocomplete ng-disabled="AllEditable == false">
                                            <label for="" class="countText">{{Project.Location.length + "/60"}}</label>
                                            <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="BasicForm.ProjectLocation.$dirty && BasicForm.ProjectLocation.$valid"></span>
                                            <div ng-show="BasicForm.ProjectLocation.$dirty && BasicForm.ProjectLocation.$invalid" class="text-danger">
                                                <span class="glyphicon glyphicon-remove text-danger"></span>
                                                <span ng-show="BasicForm.ProjectLocation.$error.minlength">Tên dự án tối thiểu 10 kí tự!</span>
                                                <span ng-show="BasicForm.ProjectLocation.$error.maxlength">Tên dự án tối đa 60 kí tự!</span>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end location -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Thời hạn</p>
                                    </div>
                                    <div class="col-md-8">
                                        @*<div class="form-inline">
                                                <label for="startdate" class="fnt20">Start:</label>
                                                <input type='date' class="form-control" style="line-height: 15px" />
                                            </div>*@
                                        <div class="form-inline">
                                            <label for="enddate" class="fnt20">End:</label>
                                            <input type='date' ng-model="Project.ExpireDate" name="ProjectDeadLine" id="ProjectDeadLine" class="form-control" style="line-height: 15px" ng-disabled="AllEditable == false" />
                                        </div>
                                    </div>
                                </div> <!-- end funding duration -->
                                <div class="row border-grey">
                                    <div class="col-md-4">
                                        <p class="title">Funding goal</p>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="number" class="form-control fnt-b" ng-trim="true" name="FundingGoal" min="1000000" ng-model="Project.FundingGoal" ng-disabled="AllEditable == false">
                                        <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="BasicForm.FundingGoal.$dirty && BasicForm.FundingGoal.$valid"></span>
                                        <div ng-show="BasicForm.FundingGoal.$dirty && BasicForm.FundingGoal.$invalid" class="text-danger">
                                            <span class="glyphicon glyphicon-remove text-danger"></span>
                                            <span ng-show="BasicForm.FundingGoal.$invalid">Mục tiêu gây quỹ phải là chữ số và lớn hơn 1,000,000!</span>
                                        </div>
                                        <div for="tips">
                                            <p>Your funding goal should be the minimum amount needed to complete the project and fulfill (and ship!) all rewards. Because funding is all-or-nothing, you can always raise more than your goal but never less. Once your project has launched, it will not be possible to change your funding goal.</p>
                                            <p>If your project is successfully funded, the following fees will be collected from your funding total: Kickstarter's 5% fee and payment processing fees (between 3% and 5%). Please note we do not withhold VAT. If funding isn't successful, there are no fees.</p>
                                        </div>
                                    </div>
                                </div> <!-- end funding goals -->
                                <div ng-if="BasicForm.$dirty">
                                    <button type="button" class="btn btn-success" ng-click="resetProjectBasic(BasicForm)">Discard</button>
                                    <button type="button" ng-disabled="BasicForm.$invalid" class="btn btn-success" ng-click="editProjectBasic(BasicForm)">Save changes</button>
                                </div>
                            </div>
                            <!-- end BASIC CONTENT -->

                            <div class="col-md-3">
                                <div for="item" class="pt20">
                                    <li class="portfolio-item" style="list-style: none">
                                        <div class="item-inner  ml0 mr0">
                                            <div class="item-image hover01 column">
                                                <figure><img ng-src="{{Project.ImageUrl}}" class="projecImg-preview"></figure>
                                            </div> <!-- end item-image -->
                                            <div class="item-title">
                                                <h5><a href="">{{Project.Title}}</a></h5>
                                            </div> <!-- end item-title -->
                                            <div class="item-content" style="word-break: break-word;">
                                                <p class="fnt15">{{Project.SubDescription}}</p>
                                            </div> <!-- end item-content -->
                                            <div class="item-footer">
                                                <div class="mt10 mb5">
                                                    <a class="grey-dark" href=""><span class="glyphicon glyphicon-map-marker" aria-hidden="true">&nbsp;</span>{{Project.Location}}</a>
                                                    &nbsp;&nbsp;
                                                    <a class="grey-dark" href=""><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span>{{Project.CategoryName}}</a>
                                                    &nbsp;&nbsp;
                                                </div>
                                                <div class="progress mt5 mb5">
                                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="50" aria-valuemax="100" style="width: 120%">
                                                        <span class="sr-only">120% Complete (success)</span>
                                                    </div>
                                                </div>
                                                <ul class="list-inline">
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">{{ Project.CurrentFunded*100/Project.FundingGoal | number:0}}%</p>
                                                        <p class="fnt16 mt0 mb0">funded</p>
                                                    </li>
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">{{Project.CurrentFunded}}</p>
                                                        <p class="fnt16 mt0 mb0">pledged</p>
                                                    </li>
                                                    <li>
                                                        <p class="fnt16 fnt-b mt0 mb0 c00">30</p>
                                                        <p class="fnt16 mt0 mb0">days to go</p>
                                                    </li>
                                                </ul>
                                            </div> <!-- end item-footer -->
                                        </div>
                                    </li><!--/.portfolio-item-->
                                </div>
                            </div> <!-- end BASIC VIEW -->
                        </div>
                    </form>
                </div> <!-- end-CONTENT -->
            </div>
            <!-- end-BASIC -->
            @* Begin tab reward *@
            <div id="reward" role="tabpanel" class="tab-pane fade in border-main">
                <div for="title">
                    <h4 class="text-center">How will you thank the people who support you?</h4>
                    <h5 class="text-center">Offer an experience, a copy of what you are making, or a thank you in the credits. Get creative!</h5>
                </div> <!-- end-TITLE -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-9">
                            <form name="rewardForm" ng-model="rewardForm" novalidate>
                                <div ng-repeat="RewardPKgs in RewardPKgs">
                                    <div class="row border-grey">
                                        <div class="col-md-2">
                                            <p class="title">Gói #{{$index + 1}}</p>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="row">
                                                <div class="col-md-4">Pledge amount</div>
                                                <div class="col-md-4">
                                                    <input type="number" class="form-control" min="0" name="PledgeAmount{{$index}}" ng-model="RewardPKgs.PledgeAmount" ng-trim="true"
                                                           ng-disabled="RewardPKgs.Backers != 0 || AllEditable == false">
                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="rewardForm.PledgeAmount{{$index}}.$dirty && rewardForm.PledgeAmount{{$index}}.$valid"></span>
                                                    <div ng-show="rewardForm.PledgeAmount{{$index}}.$dirty && rewardForm.PledgeAmount{{$index}}.$invalid" class="text-danger">
                                                        <span class="glyphicon glyphicon-remove text-danger"></span>
                                                        <span ng-show="rewardForm.PledgeAmount{{$index}}.$invalid">Mục tiêu gây quỹ phải là chữ số và lớn hơn 0!</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 ">
                                                    <ul class="list-inline pull-right">
                                                        <!-- <li><a class="btn btn-info" href="">Edit</a></li> -->
                                                        <li ng-if="AllEditable == true"><a class="btn btn-danger" ng-click="deleteReward($index)" ng-show="RewardPKgs.Backers == 0">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </div> <!-- end Pledge amount -->
                                            <div class="row">
                                                <div class="col-md-4">Description</div>
                                                <div class="col-md-8">
                                                    <textarea class="form-control" rows="3" style="resize: none" name="RewardDesc{{$index}}" ng-minlength="10" ng-maxlength="135" maxlength="135" ng-trim="true"
                                                              rows="2" ng-model="RewardPKgs.Description" ng-disabled="RewardPKgs.Backers != 0 || AllEditable == false"></textarea>
                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="rewardForm.RewardDesc{{$index}}.$dirty && rewardForm.RewardDesc{{$index}}.$valid"></span>
                                                    <div ng-show="rewardForm.RewardDesc{{$index}}.$dirty && rewardForm.RewardDesc{{$index}}.$invalid" class="text-danger">
                                                        <span class="glyphicon glyphicon-remove text-danger"></span>
                                                        <span ng-show="rewardForm.RewardDesc{{$index}}.$error.minlength">Mô tả tối thiểu 10 kí tự!</span>
                                                        <span ng-show="rewardForm.RewardDesc{{$index}}.$error.maxlength">Mô tả tối đa 135 kí tự!</span>
                                                    </div>
                                                </div>
                                            </div> <!-- end Description -->
                                            <div class="row">
                                                <div class="col-md-4">Thời gian giao hàng</div>
                                                <div class="col-md-8">
                                                    <input type="month" class="form-control delivery" style="line-height: 15px;" ng-model="RewardPKgs.EstimatedDelivery" name="RewardDelivery"
                                                           ng-disabled="RewardPKgs.Backers != 0 || AllEditable == false">
                                                </div>
                                            </div> <!-- end Estimated delivery -->
                                            <div class="row">
                                                <div class="col-md-4">Backers&nbsp;&nbsp;<b>{{RewardPKgs.Backers}}</b></div>
                                                <div class="col-md-4">
                                                    <label class="checkbox">
                                                        <input type="checkbox" ng-model="RewardPKgs.LimitQuantity" data-toggle="checkbox" class="custom-checkbox" ng-disabled="RewardPKgs.Backers != 0 || AllEditable == false">
                                                        <span class="icons"><span class="icon-unchecked"></span><span class="icon-checked"></span></span>
                                                        Giới hạn số lượng
                                                    </label>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="number" id="limit_quntity" class="form-control" min="0" ng-trim="true"
                                                           name="quantity{{$index}}" ng-model="RewardPKgs.Quantity" ng-if="RewardPKgs.LimitQuantity == true" ng-disabled="AllEditable == false">
                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="rewardForm.quantity{{$index}}.$dirty && rewardForm.quantity{{$index}}.$valid"></span>
                                                    <div ng-show="rewardForm.quantity{{$index}}.$dirty && rewardForm.quantity{{$index}}.$invalid" class="text-danger">
                                                        <span class="glyphicon glyphicon-remove text-danger"></span>
                                                        <span ng-show="rewardForm.quantity{{$index}}.$invalid">Số lượng phải là chữ số và lớn hơn 0!</span>
                                                    </div>
                                                </div>
                                            </div> <!-- end Backer -->
                                            <div class="row">
                                                <div class="col-md-4">Acitve</div>
                                                <div class="col-md-8">
                                                    <label class="checkbox">
                                                        <input type="checkbox" ng-model="RewardPKgs.IsHide" data-toggle="checkbox" class="custom-checkbox" ng-disabled="AllEditable == false">
                                                        <span class="icons"><span class="icon-unchecked"></span><span class="icon-checked"></span></span>
                                                        Ẩn gói quà này
                                                    </label>
                                                </div>
                                            </div> <!-- end Active -->
                                        </div> <!-- end items -->
                                    </div> <!-- end items -->
                                </div>
                                <div ng-if="rewardForm.$dirty">
                                    <button type="button" class="btn btn-success" ng-click="resetReward(rewardForm)">Discard</button>
                                    <button type="button" ng-disabled="rewardForm.$invalid" class="btn btn-success" ng-click="updateReward(rewardForm)">Save changes</button>
                                </div>
                            </form>
                            <div class="row border-grey border-dash">
                                <div class="addReward txt-c">
                                    <a class="btn btn-success" data-toggle="modal" data-target="#addReward" ng-disabled="AllEditable == false">Add new reward</a>
                                    <!-- add new reward dialog -->
                                    <div class="modal fade" id="addReward" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <form class="form-horizontal" role="form" name="CreateRewardForm" novalidate>
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="row border-grey">
                                                        <div class="col-md-2">
                                                            <p class="title">Gói mới</p>
                                                        </div>
                                                        <div class="col-md-10">
                                                            <div class="row">
                                                                <div class="col-md-4">Pledge amount</div>
                                                                <div class="col-md-4">
                                                                    <input type="number" class="form-control" min="0" name="NewRewardPledge" ng-model="NewReward.PledgeAmount">
                                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="CreateRewardForm.NewRewardPledge.$dirty && CreateRewardForm.NewRewardPledge.$valid"></span>
                                                                    <div ng-show="CreateRewardForm.NewRewardPledge.$dirty && CreateRewardForm.NewRewardPledge.$invalid" class="text-danger">
                                                                        <span class="glyphicon glyphicon-remove text-danger"></span>
                                                                        <span ng-show="CreateRewardForm.NewRewardPledge.$invalid">Mục tiêu gây quỹ phải là chữ số và lớn hơn 0!</span>
                                                                    </div>
                                                                </div>
                                                            </div> <!-- end Pledge amount -->
                                                            <div class="row">
                                                                <div class="col-md-4">Description</div>
                                                                <div class="col-md-8">
                                                                    <textarea class="form-control" rows="3" style="resize: none" name="NewRewardDes" ng-minlength="10"
                                                                              ng-maxlength="135" maxlength="135" ng-trim="true"
                                                                              ng-model="NewReward.Description"
                                                                              rows="2"></textarea>
                                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="CreateRewardForm.NewRewardDes.$dirty && CreateRewardForm.NewRewardDes.$valid"></span>
                                                                    <div ng-show="CreateRewardForm.NewRewardDes.$dirty && CreateRewardForm.NewRewardDes.$invalid" class="text-danger">
                                                                        <span class="glyphicon glyphicon-remove text-danger"></span>
                                                                        <span ng-show="CreateRewardForm.NewRewardDes.$error.minlength">Mô tả tối thiểu 10 kí tự!</span>
                                                                        <span ng-show="CreateRewardForm.NewRewardDes.$error.maxlength">Mô tả tối đa 135 kí tự!</span>
                                                                    </div>
                                                                </div>
                                                            </div> <!-- end Description -->
                                                            <div class="row">
                                                                <div class="col-md-4">Thời gian giao hàng</div>
                                                                <div class="col-md-8">
                                                                    <input type="month" min="{{toDay |  date:'yyyy-MM'}}" class="form-control delivery-date" style="line-height: 15px;" name="NewRewardDelivery" ng-model="NewReward.EstimatedDelivery">
                                                                </div>
                                                            </div> <!-- end Estimated delivery -->
                                                            <div class="row">
                                                                <div class="col-md-4">Backer</div>
                                                                <div class="col-md-4">
                                                                    <label class="checkbox">
                                                                        <input type="checkbox" ng-model="NewReward.LimitQuantity" data-toggle="checkbox" class="custom-checkbox">
                                                                        <span class="icons"><span class="icon-unchecked"></span><span class="icon-checked"></span></span>
                                                                        Giới hạn số lượng
                                                                    </label>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <input type="number" class="form-control" min="0" name="newQuantity" ng-model="NewReward.Quantity" ng-if="NewReward.LimitQuantity == true">
                                                                    <span class="glyphicon glyphicon-ok text-success form-control-feedback" ng-show="CreateRewardForm.newQuantity.$dirty && CreateRewardForm.newQuantity.$valid"></span>
