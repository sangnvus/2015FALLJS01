
<div id="content" class="paddingNavbar">
    <div id="main-slider" class="no-margin">
        <div class="carousel slide wet-asphalt">
            <ol class="carousel-indicators">
                <li showtab data-target="#main-slider" data-slide-to="{{$index}}" ng-repeat="slide in Slides track by $index" ng-class="{'active': $first}"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item" ng-style="{'background-image': 'url({{slide.ImageUrl}})'}" ng-repeat="slide in Slides track by $index" ng-class="{'active': $first}">
                    <div class="container">
                        <div class="row">
                            <div ng-class="$index == 2 ? 'col-sm-6': 'col-sm-12'">
                                <div class=" carousel-content txt-c white centered">
                                    <h2 class="animation animated-item-1">{{slide.Title}}</h2>
                                    <p class="animation animated-item-2">{{slide.Description}}</p>
                                    <a class="btn btn-md animation animated-item-3" href="{{slide.SlideUrl}}">{{slide.ButtonText}}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--/.item-->
            </div><!--/.carousel-inner-->
            <a onclick="return false" class="prev hidden-xs" href="#main-slider" data-slide="prev" ng-non-bindable>
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </a>
            <a onclick="return false" showtab class="next hidden-xs" href="#main-slider" data-slide="next" ng-non-bindable>
                @*ng-non-bindable*@
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            </a>
        </div><!--/.carousel-->
    </div><!--/#main-slider-->

    <div id="feature1">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabbable tabs-right">
                        <ul class="nav nav-tabs">
                            <li ng-repeat="category in projectByCategory" ng-class="{'active': $first}"><a showtab="" href="#_picked{{category.ProjectID}}" data-toggle="tab">{{category.Category}}</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane" id="_picked{{category.ProjectID}}" ng-repeat="category in projectByCategory" ng-class="{'active': $first}">
                                <h4><p class="fnt30">Staff Picks: <a href="search.html">{{category.Category}}</a></p></h4>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img ng-src="\images\projects\{{category.ImageUrl}}" alt="" class="img-responsive center-block">
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="fnt35 fnt-b pt0 pb0 mb0 mt0"><a href="/#/project/detail/{{category.ProjectCode}}">{{category.Title}}</a></p>
                                        <p class="pt0 pb0 mb0 mt0">by {{category.CreatorName}}</p>
                                        <div class="info">
                                            {{category.SubDescription}}
                                        </div>

                                        <div class="mt10 mb5">
                                            <a class="grey-dark" href=""><span class="glyphicon glyphicon-map-marker" aria-hidden="true">&nbsp;</span>{{category.Location}}</a>
                                            &nbsp;&nbsp;
                                            <a class="grey-dark" href=""><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span>{{category.Category}}</a>
                                            &nbsp;&nbsp;
                                        </div>

                                        <div class="progress mt5 mb5">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{category.CurrentFunded}}" aria-valuemin="0" aria-valuemax="100" style="width: {{category.CurrentFunded}}%">
                                                {{category.CurrentFunded}}%
                                                <span class="sr-only">{{category.CurrentFunded}}% Complete (success)</span>
                                            </div>
                                        </div>
                                        <div class="">
                                            <ul class="list-inline">
                                                <li><p class="fnt-b mt0 mb0">{{category.CurrentFunded}}%</p><p class="mt0 mb0">funded</p></li>
                                                <li><p class="fnt-b mt0 mb0">${{category.CurrentFundedNumber}}</p><p class="mt0 mb0">pledged</p></li>
                                                <li><p class="fnt-b mt0 mb0">{{category.Backers}}</p><p class="mt0 mb0">bankers</p></li>
                                                <li><p class="fnt-b mt0 mb0">{{category.ExpireDate}}</p><p class="mt0 mb0">days to go</p></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div> <!-- end feature1 -->
    <div id="feature2">
        <section id="portfolio" class="container">
            <h4 class="pull-left">What's popular:</h4>
            <a class="btn btn-transparent btn-sm pull-right ml10 mt10" href="discover.html">See more</a>
            <div class="clearfix"></div>
            <!-- <ul class="portfolio-filter">
                <li><a class="btn btn-default active" href="#" data-filter="*">All</a></li>
                <li><a class="btn btn-default" href="#" data-filter=".bootstrap">Bootstrap</a></li>
                <li><a class="btn btn-default" href="#" data-filter=".html">HTML</a></li>
                <li><a class="btn btn-default" href="#" data-filter=".wordpress">Wordpress</a></li>
            </ul> -->
            <!--/#portfolio-filter-->

            <ul class="portfolio-items col-3">
                <li class="portfolio-item apps" ng-repeat="project in popularproject">
                    <div class="item-inner">
                        <div class="item-image hover01 column">
                            <a href="/#/project/detail/{{project.ProjectCode}}"><figure><img ng-src="\images\projects\{{project.ImageUrl}}" alt=""></figure></a>
                        </div>
                        <div class="item-title">
                            <h5><a href="/#/project/detail/{{project.ProjectCode}}">{{project.Title}}</a></h5>
                        </div>
                        <div class="item-content">
                            <p class="fnt15">{{project.SubDescription}}</p>
                        </div>
                        <div class="item-footer">
                            <div class="mt10 mb5">
                                <a class="grey-dark" href=""><span class="glyphicon glyphicon-map-marker" aria-hidden="true">&nbsp;</span>{{project.Location}}</a>
                                &nbsp;&nbsp;
                                <a class="grey-dark" href=""><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span>{{project.Category}}</a>
                                &nbsp;&nbsp;
                            </div>
                            <div class="progress mt5 mb5">
                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="{{project.CurrentFunded}}" aria-valuemax="100" style="width: {{project.CurrentFunded}}%">
                                    <span class="sr-only">{{project.CurrentFunded}}% Complete (success)</span>
                                </div>
                            </div>
                            <ul class="list-inline">
                                <li><p class="fnt-b mt0 mb0 c00">{{project.CurrentFunded}}%</p><p class="mt0 mb0">funded</p></li>
                                <li><p class="fnt-b mt0 mb0 c00">${{project.CurrentFundedNumber}}</p><p class="mt0 mb0">pledged</p></li>
                                <li><p class="fnt-b mt0 mb0 c00">{{project.ExpireDate}}</p><p class="mt0 mb0">days to go</p></li>
                            </ul>
                        </div>
                    </div>
                </li><!--/.portfolio-item-->
            </ul>
            <div class="form-actions txt-c">
            </div>
        </section><!--/#portfolio-->
    </div>

    <div id="feature3">
        <div class="container">
            <div class="text-center">
                <p id="topfund" class="h1 bold">TOP FUNDS</p>
                <div class="row dark-cyan">
                    <div class="col-md-4">
                        <p class="fnt25">Total funded</p>
                        <p><i class="fa fa-money fa-5x"></i></p>
                        <p class="fnt50 fnt-b">${{totalprojectfund.CurrentFundedNumber}}</p>
                    </div>
                    <div class="col-md-4">
                        <p class="fnt25">Highest project fund</p>
                        <p><i class="fa fa-line-chart fa-5x"></i></p>
                        <p class="fnt50 fnt-b">${{highestprojectfund.CurrentFundedNumber}}</p>
                    </div>
                    <div class="col-md-4">
                        <p class="fnt25">Highest pledge amount</p>
                        <p><i class="fa fa-diamond fa-5x"></i></p>
                        <p class="fnt50 fnt-b">${{highestprojectpledge.CurrentFundedNumber}}</p>
                    </div>
                </div>
                <div id="btnview" class="pt15">
                    <a class="btn btn-transparent btn-sm" href="statistics.html">View more</a>
                </div>
            </div>
        </div>
    </div> <!-- end feature3 -->
</div> <!-- end content -->
<script>
    //#main-slider
    // -------------------------------------------------------------
    $(function () {
        $('#main-slider.carousel').carousel({
            interval: 8000
        });
    });

    $('.centered').each(function (e) {
        $(this).css('margin-top', ($('#main-slider').height() - $(this).height()) / 2);
    });
    //end Main Slider ---------------------------------------------
</script>