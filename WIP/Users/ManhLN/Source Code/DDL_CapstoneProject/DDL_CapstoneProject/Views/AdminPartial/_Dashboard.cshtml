<!-- begin STATISTICS table -->
<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>Thống kê dự án</h4>
                </div>
                <div class="portlet-widgets">
                    <select class="form-control project-chart" ng-model="selectedTableOption"
                            ng-options="option.name for option in tableOption track by option.value" ng-change="changeTable()"></select>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="example-table" class="table table-striped table-bordered table-hover table-green"
                           datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs">
                        <thead>
                            <tr>
                                <th>Thời gian</th>
                                <th>Số dự án tạo</th>
                                <th>Dự án thành công</th>
                                <th>Dự án thất bại</th>
                                @*<th>Dự án đang chạy</th>*@
                                <th>Tổng số đóng góp(VNĐ)</th>
                                <th>Đóng góp thành công(VNĐ)</th>
                                <th>Lợi nhuận(VNĐ)</th>
                                <th>Tỉ lệ thành công</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="statistic in StatisticTable">
                                <td class="col-number" ng-if="selectedTableOption.value == 'year'">{{statistic.Time | date: "yyyy" }}</td>
                                <td class="col-number" ng-if="selectedTableOption.value == 'month'">{{statistic.Time | date: "MM-yyyy" }}</td>
                                <td class="col-number">{{statistic.TotalProject | currency:"":0}}</td>
                                <td class="col-number">{{statistic.TotalSucceed | currency:"":0}}</td>
                                <td class="col-number">{{statistic.TotalFail | currency:"":0}}</td>
                                @*<td class="col-number">{{statistic.LiveProject | currency:"":0}}</td>*@
                                <td class="col-number">{{statistic.TotalFund | currency:"":0}}</td>
                                <td class="col-number">{{statistic.SucceedFund | currency:"":0}}</td>
                                <td class="col-number">{{statistic.TotalProfit | currency:"":0}}</td>
                                <td class="col-number">{{statistic.TotalSucceed*100/statistic.TotalProject | number:0}}%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.portlet-body -->
        </div>
        <!-- /.portlet -->

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- end STATISTICS table -->