                                <tr>
                                    <th>Tên</th>
                                    <th>Đăng nhập cuối</th>
                                    <th style="width: 100px">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="user in RecentUser">
